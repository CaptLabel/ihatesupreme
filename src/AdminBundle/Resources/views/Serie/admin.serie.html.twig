{% extends "@Admin/admin.layout.html.twig" %}
{% block body %}
    <div class="u-full-width">
        <a href="{{ path('admin_serie_add') }}" class="u-pull-right" style="margin-bottom: 20px;">ajout.</a>
    </div>
    <table class="u-full-width">
        <tbody>
        {% if listSerie|length == 0 %}aa
            <tr>
                <td colspan="5">il n'y a pas de s√©rie</td>
            </tr>
        {% else %}
            {% for serie in listSerie %}
                <tr class="line-entete">
                    <th style="width: 140px;">name</th>
                    <th>ville</th>
                    <th>going</th>
                    <th style="width: 50px;">modify</th>
                    <th style="width: 50px;">delete</th>
                </tr>
                <tr class="line-info">
