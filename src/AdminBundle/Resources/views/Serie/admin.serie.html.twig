                            {% endfor %}
                        </ul>
                    </td>
                    <td><a href="{{ path('admin_serie_update', {'id': serie.id}) }}">U</a></td>
                    <td><a href="{{ path('admin_serie_remove', {'id': serie.id}) }}">X</a></td>
                </tr>
                <tr>
                    <td><b>edito</b></td>
                    <td colspan="4">
                        {{ serie.edito.text }}
                    </td>
                </tr>
            {% endfor %}
        {% endif %}

        </tbody>
    </table>
{% endblock %}